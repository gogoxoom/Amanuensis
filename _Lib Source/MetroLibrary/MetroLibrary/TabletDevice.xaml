<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="MetroLibrary.TabletDevice">

	<Grid x:Name="LayoutRoot" Background="White" HorizontalAlignment="Left" VerticalAlignment="Top" >
		<Image UseLayoutRounding="False" Source="Images/TabletScreen.PNG" Stretch="Fill" HorizontalAlignment="Left" VerticalAlignment="Top" Height="828" Width="884"/>
		<ScrollContentPresenter x:Name="MainScreenContentPresenter" Margin="40,66,0,0" Width="800" Height="600" HorizontalAlignment="Left" VerticalAlignment="Top" d:LayoutOverrides="Width, Height" />
	</Grid>
</UserControl>